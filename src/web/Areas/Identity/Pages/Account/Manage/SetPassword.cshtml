@page
@model SetPasswordModel
@inject IdentityLocalizationService IdentityLocalizer
@{
  ViewData["Title"] = @IdentityLocalizer.GetLocalizedHtmlString("SET_PASSWORD");
  ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />

<p class="text-info">
  @IdentityLocalizer.GetLocalizedHtmlString("SET_PASSWORD_TEXT")
</p>

<form class="form" id="set-password-form" method="post">
  <div class="form__validation-summary" asp-validation-summary="All"></div>
  <div class="form__group">
    <label asp-for="Input.NewPassword">
      @IdentityLocalizer.GetLocalizedHtmlString("PASSWORD")
    </label>
    <input asp-for="Input.NewPassword" />
    <span asp-validation-for="Input.NewPassword"></span>
  </div>
  <div class="form-group">
    <label asp-for="Input.ConfirmPassword">
      @IdentityLocalizer.GetLocalizedHtmlString("CONFIRM_PASSWORD")
    </label>
    <input asp-for="Input.ConfirmPassword" />
    <span asp-validation-for="Input.ConfirmPassword"></span>
  </div>
  <button type="submit" class="btn btn-primary">
    @IdentityLocalizer.GetLocalizedHtmlString("SET_PASSWORD")
  </button>
</form>
