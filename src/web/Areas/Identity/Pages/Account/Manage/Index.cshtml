@page
@model IndexModel
@inject IdentityLocalizationService IdentityLocalizer
@{
  ViewData["Title"] = @IdentityLocalizer.GetLocalizedHtmlString("PROFILE");
  ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<form class="form" id="profile-form" method="post">
  <div class="form__validation-summary" asp-validation-summary="All"></div>
  <div class="form__group">
    <label asp-for="Username">
      @IdentityLocalizer.GetLocalizedHtmlString("USERNAME")
    </label>
    <input asp-for="Username" disabled />
  </div>
  <div class="form__group">
    <label asp-for="Input.PhoneNumber">
      @IdentityLocalizer.GetLocalizedHtmlString("PHONE_NUMBER")
    </label>
    <input asp-for="Input.PhoneNumber" />
    <span asp-validation-for="Input.PhoneNumber"></span>
  </div>
  <button id="update-profile-button" type="submit">
    @IdentityLocalizer.GetLocalizedHtmlString("SAVE")
  </button>
</form>
