@page
@model GenerateRecoveryCodesModel
@inject IdentityLocalizationService IdentityLocalizer
@{
    ViewData["Title"] = @IdentityLocalizer.GetLocalizedHtmlString("GENERATE_2FA_RECOVERY_CODES");
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div role="alert">
  <p>
    <span class="glyphicon glyphicon-warning-sign"></span>
    <strong>@IdentityLocalizer.GetLocalizedHtmlString("GENERATE_2FA_RECOVERY_CODES_SAFE_PLACE")</strong>
  </p>
  <p>
    @IdentityLocalizer.GetLocalizedHtmlString("GENERATE_2FA_RECOVERY_CODES_INFO_LOSE")
  </p>
  <p>
     @IdentityLocalizer.GetLocalizedHtmlString("GENERATE_2FA_RECOVERY_CODES_TEXT")
     <a asp-page="./ResetAuthenticator">
      @IdentityLocalizer.GetLocalizedHtmlString("GENERATE_2FA_RECOVERY_CODES_TEXT_LINK")
     </a>
  </p>
</div>
<div>
  <form method="post" class="form__group">
    <button type="submit">@IdentityLocalizer.GetLocalizedHtmlString("GENERATE_RECOVERY_CODES")</button>
  </form>
</div>