{
  "DomainSettings": {
    "schema": "http",
    "host": "localhost",
    "port": 5000
  },
  "ConnectionString": "Filename=sts.sqlite",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft.Hosting.Lifetime": "Information",
        "Serilog.AspNetCore.RequestLoggingMiddleware": "Information",
        "tomware.Microsts.Web.LogEmailSender": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/.log",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "IdentityServer": {
    "Clients": [
      {
        "Enabled": true,
        "ClientId": "spaclient",
        "ClientName": "spaclient",
        "AllowedGrantTypes": [
          "implicit"
        ],
        "RequireConsent": false,
        "AllowAccessTokensViaBrowser": true,
        "RedirectUris": [
          "http://localhost:5000",
          "http://localhost:4200"
        ],
        "PostLogoutRedirectUris": [
          "http://localhost:5000",
          "http://localhost:4200"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:5000",
          "http://localhost:4200"
        ],
        "AllowedScopes": [
          "openid",
          "profile",
          "email",
          "sts_api"
        ]
      },
      {
        "Enabled": true,
        "ClientId": "spaclient-code",
        "ClientName": "spaclient-code",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "RequireClientSecret": false,
        "RequirePkce": true,
        "RequireConsent": false,
        "AllowAccessTokensViaBrowser": true,
        "RedirectUris": [
          "http://localhost:5000",
          "http://localhost:4200"
        ],
        "PostLogoutRedirectUris": [
          "http://localhost:5000",
          "http://localhost:4200"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:5000",
          "http://localhost:4200"
        ],
        "AllowedScopes": [
          "openid",
          "profile",
          "email",
          "sts_api"
        ]
      }
    ]
  }
}